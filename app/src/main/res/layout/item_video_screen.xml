<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">


    <VideoView
        android:id="@+id/videoView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ProgressBar
        android:id="@+id/videoProgressBar"
        android:visibility="invisible"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/videoView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ProgressBar>


    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="611dp"
    app:layout_constraintTop_toBottomOf="@+id/profileInfoView">

        <ImageButton
            android:id="@+id/bLikeCountVideoView"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:src="@drawable/ic_like" />

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/bLikeCountVideoView"
            android:text="0 likes"
            android:textSize="@dimen/_12sdp" />


        <RelativeLayout
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/downloadVideoView"
            android:background="@drawable/blue_button">


            <ToggleButton
                android:id="@+id/bookmarkVideoView"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/toggle_bookmarks"
                android:elevation="2dp"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/downloadVideoView"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/shareVideoView"
            android:background="@drawable/circle_button"
            android:src="@drawable/ic_down_arrow" />

        <ImageButton
            android:id="@+id/shareVideoView"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/ic_share" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profileInfoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/actionBar"
        >

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profilePicImageView"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:src="@drawable/reaction_picture"
            app:civ_border="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@id/profilePicImageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usernameImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="blossom"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"

                android:textStyle="bold" />


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="@id/videoView"
        app:layout_constraintTop_toBottomOf="@+id/actionBar"
       >

        <TextView
            android:id="@+id/shareCountVideoView"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/_8sdp"

            android:layout_marginRight="11dp"
            android:text="13"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/downloadCountVideoView"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/_8sdp"

            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/shareCountVideoView"
            android:text="13"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/bookmarkCountImageView"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/downloadCountVideoView"
            android:textSize="@dimen/_8sdp"
            android:text="13"
            android:textColor="@color/white" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>