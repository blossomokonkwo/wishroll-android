<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Upload.ImagepageActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >

        <RelativeLayout
            android:id="@+id/topPostBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linLeft"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/linRight"
            android:layout_alignParentLeft="true"
            >

            <ImageButton
                android:id="@+id/ibBackImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back_colored"
                android:layout_margin="10dp"
                android:background="@color/transparent"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/linRight"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <ImageButton
                android:background="@color/transparent"
                android:id="@+id/ibReportPost"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_dots_colored"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"



                />
        </LinearLayout>

        </RelativeLayout>



        <ImageView
            android:layout_below="@id/topPostBar"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        </ImageView>



    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>