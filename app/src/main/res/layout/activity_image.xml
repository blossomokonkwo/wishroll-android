<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="PostViewModel"
            type="co.wishroll.viewmodel.PostViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.profile.ProfileViewActivity"
        >

        <ScrollView
            android:id="@+id/nestedContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:background="@color/white"
            android:scrollbars="none"
            android:scrollingCache="true">


        <!-- Full Page -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/white">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/backImageView"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_chevron_left_white"
                android:elevation="2dp"
                android:tint="@color/black"
                android:layout_margin="5dp"
                android:background="@color/transparent"
                android:layout_alignParentLeft="true"/>


            <ImageButton
                android:id="@+id/moreImageView"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_more_horiz_24"
                android:elevation="2dp"
                android:tint="@color/black"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp"
                    android:src="@color/black"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/bLike"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/ic_like"
                    android:background="@color/transparent"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 likes"
                    android:textSize="@dimen/_12sdp"
                    android:layout_toRightOf="@id/bLike"
                    android:layout_centerVertical="true"/>




                <!--<ImageButton
                    COMMENTS SECTION
                    android:id="@+id/commentImageView"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:src="@drawable/ic_comment"
                    android:layout_margin="10dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_button"
                    android:layout_toLeftOf="@id/shareImageView"

                    />-->

                <ImageButton
                    android:id="@+id/shareImageView"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:src="@drawable/ic_down_arrow"
                    android:elevation="2dp"
                    android:layout_margin="10dp"
                    android:layout_toLeftOf="@id/bookmarkImageView"
                    android:background="@drawable/circle_button"
                    />

                <ImageButton
                    android:id="@+id/bookmarkImageView"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:src="@drawable/ic_bookmark_white"
                    android:layout_margin="10dp"
                    android:background="@drawable/circle_button"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!--<TextView
                    COMMENTS SECTION
                    android:text="15"
                    android:textAlignment="center"
                    android:id="@+id/commentCountImageView"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/shareCountImageView"
                    android:gravity="center_horizontal" />-->

                <TextView
                    android:text="15"
                    android:id="@+id/shareCountImageView"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_down_arrow"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/bookmarkCountImageView"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:text="15"
                    android:id="@+id/bookmarkCountImageView"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bookmark_white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_horizontal"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/profilePicImageView"
                    android:layout_width="@dimen/_50sdp"
                    app:civ_border="false"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/reaction_picture"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/profilePicImageView"
                    android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/usernameImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="blossom"
                    android:textStyle="bold"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_13sdp"/>

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/postCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="So yeah this is my caption">

                    </TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 week ago"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more_like_this"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_10sdp"/>
            </RelativeLayout>

            <fragment
                android:id="@+id/morelikethisFragment"
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:name="co.wishroll.views.reusables.MoreLikeThisFragment">

            </fragment>





        </LinearLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton

            android:id="@+id/fabImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:src="@drawable/ic_home"
            android:background="@color/wishroll_blue"
            android:layout_margin="16dp"
            app:backgroundTint="@color/wishroll_blue"

            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
