<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="imageviewmodel"
            type="co.wishroll.viewmodel.media.ImageViewModel" />

        <variable
            name="mediaPostUrl"
            type="String" />

    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.profile.ProfileViewActivity"
        >

        <ScrollView
            android:id="@+id/nestedContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:background="@color/white"
            android:scrollbars="none"
            android:scrollingCache="true">


        <!-- Full Page -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/white">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/backImageView"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_chevron_left_white"
                android:elevation="2dp"
                android:tint="@color/black"
                android:layout_margin="5dp"
                android:background="@color/transparent"
                android:layout_alignParentLeft="true"/>



            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:scaleType="fitStart"
                    android:id="@+id/mainImageView"
                    app:mainViewImage="@{mediaPostUrl}"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp"
                    android:src="@color/black"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">







                <ImageButton
                    android:id="@+id/shareImageView"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:src="@drawable/ic_down_arrow"
                    android:layout_margin="10dp"
                    android:background="@drawable/circle_button"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">





            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more_like_this"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_10sdp"/>
            </RelativeLayout>

            <fragment
                android:id="@+id/morelikethisFragment"
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:name="co.wishroll.views.reusables.MoreLikeThisFragment">

            </fragment>





        </LinearLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton

            android:id="@+id/fabImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:src="@drawable/ic_home"
            android:background="@color/wishroll_blue"
            android:layout_margin="16dp"
            app:backgroundTint="@color/wishroll_blue"

            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
