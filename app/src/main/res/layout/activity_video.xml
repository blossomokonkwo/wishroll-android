<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="videosviewmodel"
            type="co.wishroll.viewmodel.media.VideosViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:background="@color/black"
        tools:context="co.wishroll.views.reusables.VideoActivity"
        >

        <RelativeLayout
            android:elevation="2dp"
            android:id="@+id/backButtons"
            android:background="@color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/backVideoView"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:background="@color/transparent"
                android:elevation="2dp"
                android:src="@drawable/ic_chevron_left_white" />


            <ImageButton
                android:id="@+id/moreImageView"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@color/transparent"
                android:elevation="2dp"
                android:src="@drawable/ic_more_horiz_24" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/videoMainProgressBar"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/videosViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </androidx.viewpager2.widget.ViewPager2>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>