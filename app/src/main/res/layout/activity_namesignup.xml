<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.registration.NameSignupActivity"
    android:scrollbarThumbVertical="@drawable/blue_button">

    <!-- Full Page -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/wishroll_blue"
                android:textSize="@dimen/_18ssp"
                android:layout_centerInParent="true"
                android:text="@string/create_account"/>

            <ImageButton
                android:id="@+id/backName"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_chevron_left_24"
                android:background="@color/transparent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_10sdp"/>

        </RelativeLayout>

        <!-- Full Name Ask -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />

        <EditText
            android:id="@+id/userFullName"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:hint="@string/please_name"/>


        </LinearLayout>





        <!-- Sign Up Button wuth Extra Buffer & Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/bNextName"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/blue_button"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_17ssp"/>

            <ProgressBar
                android:id="@+id/progressBarName"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
