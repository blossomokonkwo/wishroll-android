    >

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_height="@dimen/_45sdp"
        android:layout_width="match_parent"
        android:background="@drawable/grey_outline"
