<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/trendingPostItem"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_145sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/trendingTagBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="@color/white"
       >

        <TextView
            android:id="@+id/tagTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Will Smith"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/seeMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See More"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/wishroll_blue"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_105sdp"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <RelativeLayout
            android:layout_width="@dimen/_105sdp"
            android:layout_height="@dimen/_105sdp"
            android:layout_weight="1"
            >

        <ImageView
            android:id="@+id/videoFlagOne"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_play"
            android:elevation="2dp"
            android:layout_alignParentRight="true">

        </ImageView>

        <ImageView
            android:id="@+id/thumbnailOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/reaction_picture"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="@dimen/_105sdp"
            android:layout_height="@dimen/_105sdp"

            >

            <ImageView
                android:id="@+id/videoFlagTwo"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_play"
                android:elevation="2dp"
                android:layout_alignParentRight="true">

            </ImageView>

            <ImageView
                android:id="@+id/thumbnailTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/reaction_picture"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/_105sdp"
            android:layout_weight="1"
            android:layout_height="@dimen/_105sdp"
            >

            <ImageView
                android:id="@+id/videoFlagThree"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_play"
                android:elevation="2dp"
                android:layout_alignParentRight="true">

            </ImageView>

            <ImageView
                android:id="@+id/thumbnailThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/reaction_picture"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>