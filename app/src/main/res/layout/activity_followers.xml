<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.coordinatorlayout.widget.CoordinatorLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="co.wishroll.views.Following">

        <ScrollView
            android:id="@+id/nestedContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:background="@color/white"
            android:scrollbars="none"
            android:scrollingCache="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_10sdp">

                    <ImageButton
                        android:id="@+id/followersBackButton"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_chevron_left_24"
                        android:background="@color/transparent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/followers"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_19ssp"
                        android:layout_gravity="center"
                        />
                </RelativeLayout>






                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/followersRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabFollowersListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:src="@drawable/ic_home"
            style="?borderlessButtonStyle"
            android:background="@color/wishroll_blue"
            android:layout_margin="16dp"
            app:backgroundTint="@color/wishroll_blue"

            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>