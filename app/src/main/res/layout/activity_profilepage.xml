<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.ProfileActivity">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Top Toolbar -->
        <LinearLayout
            android:id="@+id/relLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/white"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/ibBackMain"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="110dp"
                android:background="@drawable/ic_back_colored" />

            <TextView
                android:id="@+id/tvUsernameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="username"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/ibNotifications"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/ic_notification_colored"
                />

            <ImageButton
                android:id="@+id/ibSettings"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_more_colored"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <!-- Tab Layout text disappeared as soon as I added the scroll view +
        extra relative layout, might need to change, ykw..-->

        <!--

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relLayout1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            -->


        <!-- Middle Section -->
        <RelativeLayout
            android:id="@+id/relLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relLayout1"

            >


            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:fitsSystemWindows="false"
                >

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsingToolBar"
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:background="@color/white"
                    android:fitsSystemWindows="false"
                    app:contentScrim="@android:color/transparent"
                    app:expandedTitleMarginStart="48dp"
                    app:expandedTitleTextAppearance="@android:color/transparent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:titleEnabled="false">

                    <RelativeLayout
                        android:id="@+id/relLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/relLayout1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_below="@id/relLayout1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/profileBanner"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/um_chile" />


                            </LinearLayout>


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profilePic"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="-90dp"
                                android:src="@color/wishroll_blue"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="0dp"

                                />


                            <TextView
                                android:id="@+id/tvFullName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="Blossom"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold">

                            </TextView>


                            <TextView
                                android:id="@+id/tvBio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="25dp"
                                android:text="Whew Chile anyways Literally I want to write the longest thing I "
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp">

                            </TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"

                                >

                                <TextView
                                    android:id="@+id/tvViews"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginRight="30dp"
                                    android:gravity="center_horizontal"
                                    android:text="133"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvFollowers"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginRight="30dp"
                                    android:gravity="center_horizontal"
                                    android:text="13k"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvFollowing"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginRight="30dp"
                                    android:gravity="center_horizontal"
                                    android:text="103"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"

                                >

                                <TextView
                                    android:id="@+id/tvViewsLabel"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="30dp"
                                    android:gravity="center_horizontal"
                                    android:text="Views"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/tvFollowersLabel"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="30dp"
                                    android:gravity="center_horizontal"
                                    android:text="Followers"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/tvFollowingLabel"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="30dp"
                                    android:gravity="center_horizontal"
                                    android:text="Following"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />
                            </LinearLayout>


                        </LinearLayout>

                    </RelativeLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>








            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tlTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                app:tabIndicatorColor="@color/wishroll_blue"
                app:tabSelectedTextColor="@color/wishroll_blue"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                app:tabTextColor="@color/black"
                android:layout_below="@id/appBar"


                >

                <!--

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tiUploads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uploads">


                </com.google.android.material.tabs.TabItem>

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tiLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liked">

                </com.google.android.material.tabs.TabItem>

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tiBookmarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bookmarked">

                </com.google.android.material.tabs.TabItem> -->


            </com.google.android.material.tabs.TabLayout>




        </RelativeLayout>

        <androidx.viewpager.widget.ViewPager
            android:layout_below="@id/relLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vpViewPager">




        </androidx.viewpager.widget.ViewPager>









    </RelativeLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>